@using ControleDeMedicamentos.Models
@using ControleDeMedicamentos.ModuloPaciente

@model EditarPacienteViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Paciente";
}

<link rel="stylesheet" href="~/form.css" />

<form action="/pacientes/editar/@Model.Id" method="post">
    <label for="nome">Nome do Paciente:</label>
    <input type="text" name="nome" value="@Model.Nome" />
    <label for="telefone">Telefone do Paciente:</label>
    <input type="text" name="telefone" value="@Model.Telefone" />
    <label for="cartaoSus">Cartão SUS do Paciente:</label>
    <input type="text" name="cartaoSus" value="@Model.CartaoSus" />
    <div class="botoes-interacao">
        <a type="button" id="botaoVoltar" href="/pacientes/visualizar">Voltar</a>
        <button type="submit" id="botaoConfirmar">Confirmar</button>
    </div>
</form>
